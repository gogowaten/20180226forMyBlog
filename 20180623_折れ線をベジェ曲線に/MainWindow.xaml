<Window x:Class="_20180623_折れ線をベジェ曲線に.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20180623_折れ線をベジェ曲線に"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <Grid>
    <Canvas Name="MyCanvas" Background="Transparent">
      <Button Name="ButtonVisible" Content="表示切り替え"/>
      <Polyline Name="MyPolyline" Stroke="Orange" StrokeThickness="20" Opacity="0.5"
                Points="50,100 120,220 300,150 150,50 200,250 300,200 450,250"/>
      <Path Name="MyPathBezier" Stroke="CadetBlue" StrokeThickness="20"/>
    </Canvas>
  </Grid>
</Window>
