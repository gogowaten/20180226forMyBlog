<Window x:Class="_20180326_画像の使用色数の処理速度比較.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20180326_画像の使用色数の処理速度比較"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <Window.Resources>
    <Style TargetType="TextBlock">
      <Setter Property="VerticalAlignment" Value="Center"/>
      <Setter Property="Margin" Value="2,0"/>
    </Style>
  </Window.Resources>
  <Grid Margin="0,30,0,0">
    <DockPanel>
      <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">        
        <TextBlock Name="TextBlockImageSize" Text="image size" FontSize="18"/>
        <TextBlock Name="TextBlockPixelsCount" Text="pixels count" FontSize="18"/>
      </StackPanel>
      <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Image Name="MyImage" UseLayoutRounding="True" Stretch="None"/>
      </ScrollViewer>
    </DockPanel>
  </Grid>
</Window>
