<Window x:Class="_20180612_ベジェ曲線のアンカーと制御点までの直線.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20180612_ベジェ曲線のアンカーと制御点までの直線"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
    <Canvas Name="MyCanvas" Background="Transparent">
      <Path Name="MyPath" Stroke="DarkOrange" StrokeThickness="16"/><!--ベジェ曲線用-->
      <Path Name="MyPath2" Stroke="DarkMagenta" StrokeThickness="1"/><!--方向線用-->
    </Canvas>
  </Grid>
</Window>
